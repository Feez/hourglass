/libea//libea
/libea//libea_runner
/libmkv//libmkv
: <include>./include <link>static
;

install dist : ff_markov_migration : <location>$(HOME)/bin ;

exe square_markov :
src/square_markov.cpp
/libea//libea
/libea//libea_runner
/libmkv//libmkv
