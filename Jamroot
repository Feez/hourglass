import os ;
local HOME = [ os.environ HOME ] ;

use-project /libea : ../ealib/libea ;
use-project /libmkv : ../ealib/libmkv ;




exe new_body_plans2 :
src/new_body_plans2.cpp
/libea//libea
/libea//libea_runner
/libmkv//libmkv
: <include>./include <link>static
;

install dist : new_body_plans2 : <location>$(HOME)/bin ;




